{
  "rules": {
    "data": {
      ".read": "auth != null",
      ".write": false,
      
      "diversey_users": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && (root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador' || auth.uid == $userId)",
          ".validate": "newData.hasChildren(['username', 'role', 'passwordHash'])"
        }
      },
      
      "diversey_tecnicos": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador'",
        ".validate": "newData.hasChildren(['nome', 'email'])"
      },
      
      "diversey_fornecedores": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador' || root.child('data/diversey_users/' + auth.uid + '/role').val() == 'gestor')",
        ".validate": "newData.hasChildren(['nome'])"
      },
      
      "diversey_pecas": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador'",
        ".validate": "newData.hasChildren(['codigo', 'descricao'])"
      },
      
      "diversey_solicitacoes": {
        ".read": "auth != null",
        "$solId": {
          ".write": "auth != null && (root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador' || root.child('data/diversey_users/' + auth.uid + '/role').val() == 'gestor' || (!data.exists() && newData.child('tecnicoId').val() == auth.uid))",
          ".validate": "newData.hasChildren(['numero', 'tecnicoId', 'data', 'status', 'itens'])"
        }
      },
      
      "diversey_settings": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('data/diversey_users/' + auth.uid + '/role').val() == 'administrador'"
      },
      
      "healthcheck": {
        ".read": true,
        ".write": true
      }
    }
  }
}
