{
  "name": "dashboard-pecas-firebase",
  "version": "2.0.0",
  "description": "Dashboard de Solicitações de Peças - Modern PWA with React, TypeScript, and Firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "keywords": [
    "pwa",
    "react",
    "typescript",
    "firebase",
    "parts-management",
    "dashboard"
  ],
  "author": "Diversey - A Solenis Company",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.1",
    "firebase": "^11.2.0",
    "zustand": "^5.0.3",
    "chart.js": "^4.4.8",
    "react-chartjs-2": "^5.3.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.5",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/ui": "^3.0.5",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^3.0.5",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.1",
    "firebase-admin": "^13.6.0"
  }
}
