{
  "name": "dashboard-pecas",
  "version": "1.0.0",
  "description": "Painel de Solicitação de Peças - PWA offline-first para gerenciamento de solicitações de peças",
  "main": "index.html",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint js/*.js --fix",
    "lint:check": "eslint js/*.js"
  },
  "keywords": [
    "pwa",
    "offline-first",
    "parts-management",
    "solicitacoes"
  ],
  "author": "Diversey",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/vendor/**"
    ],
    "verbose": true
  }
}
